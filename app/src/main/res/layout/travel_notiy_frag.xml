<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/PlaystoreCardBG">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="1dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".6"
				android:text="Account Number"
				android:background="@color/zenithred"
				android:textColor="#ffffffff"
				android:textSize="20dp"
				android:gravity="center"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".4"
				style="@style/SpinnerAppTheme"
				android:theme="@style/SpinnerAppTheme">
				<Spinner
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/SpnRequestAccountNumber"
					android:background="@color/PlayStoreBG"
					android:spinnerMode="dropdown"
					android:theme="@style/SpinnerAppTheme"
					style="@style/SpinnerAppTheme"/>

			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="1dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".6"
				android:text="Card Number"
				android:background="@color/zenithred"
				android:textColor="#ffffffff"
				android:textSize="20dp"
				android:gravity="center"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".4"
				style="@style/EditTextZenithTheme">
				<EditText
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/EdtxtRequestCardNumber"
					android:background="@color/PlayStoreBG"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="1dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".6"
				android:text="Mobile Number"
				android:background="@color/zenithred"
				android:textColor="#ffffffff"
				android:textSize="20dp"
				android:gravity="center"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".4"
				style="@style/EditTextZenithTheme"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp">
				<EditText
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/EdtxtRequestPhoneNumber"
					android:background="@color/PlayStoreBG"/>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="1dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				style="@style/EditTextZenithTheme">
				<EditText
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/EdtxtTravelDate"
					android:background="@color/PlayStoreBG"
					android:text="Enter Teael Date"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				style="@style/EditTextZenithTheme">
				<EditText
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/EdtxtRetuenDate"
					android:background="@color/PlayStoreBG"
					android:text="Enter Return Date"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_marginTop="1dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".6"
				android:text="Destination"
				android:background="@color/zenithred"
				android:textColor="#ffffffff"
				android:textSize="20dp"
				android:gravity="center"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight=".4"
				style="@style/SpinnerAppTheme"
				android:theme="@style/SpinnerAppTheme">
				<Spinner
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/SpnTravelDestination"
					android:background="@color/PlayStoreBG"
					android:spinnerMode="dropdown"
					android:theme="@style/SpinnerAppTheme"
					style="@style/SpinnerAppTheme"/>

			</LinearLayout>

		</LinearLayout>



		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<Button
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/BtnCardAccess"
				android:background="@color/zenithred"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:text="Submit"
				android:textColor="#ffffffff"/>
		</LinearLayout>


	</LinearLayout>

</LinearLayout>