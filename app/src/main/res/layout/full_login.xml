<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:id="@+id/login"
			  android:background="#ffffff"
			  style="@style/_AppTheme">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="Enter Internet Baking Login Credentials"
			android:textColor="@color/zenithred"
			android:gravity="center"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="@color/PlayStoreBG">

		<EditText android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:id="@+id/logintxtUserEnter"
				  style="@style/EditTextAppTheme"
				  android:textColor="@color/zenithred"
				  android:singleLine="true"
			      android:layout_weight="1"
				  android:text="Accesscode"
			/>

		<EditText android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:id="@+id/logintxtAccessEnter"
				  style="@style/EditTextAppTheme"
				  android:textColor="@color/zenithred"
				  android:singleLine="true"
				  android:layout_weight="1"
				  android:text="Username"/>

		<EditText android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:id="@+id/logintxtpassEnter"
				  android:inputType="textPassword"
				  style="@style/EditTextAppTheme"
				  android:textColor="@color/zenithred"
				  android:singleLine="true"
				  android:layout_weight="1"
				  android:text="Password"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="Log In"
			android:background="@color/zenithred"
			android:layout_marginLeft="50dp"
			android:layout_marginRight="50dp"
			android:id="@+id/AutoPayLogin"
			android:layout_marginTop="20dp"/>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

	</LinearLayout>




</LinearLayout>
