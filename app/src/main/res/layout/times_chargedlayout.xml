<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/PlaystoreCardBG">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			style="@style/EditTextAppTheme"
			android:theme="@style/EditTextAppTheme"
			android:gravity="center">
			<EditText
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/PlayStoreBG"
				android:id="@+id/EdxtxtTimesCharged"
				style="@style/EditTextAppTheme"
				android:theme="@style/EditTextAppTheme"
				android:gravity="center"
				android:textColor="@color/zenithred"
				android:textSize="20dp"/>
		</LinearLayout>
		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:id="@+id/BtntxtTimesCharged"
			android:text="Done"
			android:background="@color/zenithred"
			android:layout_marginLeft="50dp"
			android:layout_marginRight="50dp"/>
	</LinearLayout>

</LinearLayout>